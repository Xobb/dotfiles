[user]
	name = Paul Chubatyy
	email = xobb@citylance.biz
[color]
    ui = auto
  [color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
  [color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
  [color "status"]
    added = yellow
    changed = green
    untracked = cyan
[cola]
	fontdiff = Droid Sans Mono,10,-1,0,50,0,0,0,0,0
[gui]
	editor = kate
[merge]
	tool = kdiff3
[diff]
	tool = kdiff3
[alias]
	hist = log --graph --pretty=format:'%Cred%h%Creset %Cgreen[%ad]%Creset %C(yellow)%d%Creset%s %C(bold blue)<%an>%Creset' --abbrev-commit --date=local
